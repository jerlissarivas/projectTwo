<h1>Edit {{ contacts.firstName }} {{contacts.lastName}} </h1>

<form action="/contacts/{{contacts._id}}/edit" method="POST">
  <label for="firstName"> First Name </label>
  <input type="text" name="firstName" id="firstName" value="{{ contacts.firstName }}">
  <br>

  <label for="lastName"> Last Name </label>
  <input type="text" name="lastName" id="lastName" value="{{ contacts.lastName }}">
  <br>

  <label for="companyOne"> Company 1 </label>
  <input type="text" name="companyOne" id="companyOne" value="{{ contacts.companyOne }}">
  <br>

  <label for="companyTwo"> Company 2 </label>
  <input type="text" name="companyTwo" id="companyTwo" value="{{ contacts.companyTwo }}">
  <br>

  <label for="avatar"> Choose Your Avatar </label>
  <input id="avatar" type="file" name="avatar" value="{{ contacts.avatar }}">
  <br>

  <label for="personalEmail"> Personal Email </label>
  <input type="text" name="personalEmail" id="personalEmail" value="{{ contacts.personalEmail }}">
  <br>

  <label for="workEmail"> Work Email </label>
  <input type="text" name="workEmail" id="workEmail" value="{{ contacts.workEmail }}">
  <br>

  <label for="group"> Group </label>
  <input type="text" name="group" id="group" value="{{ contacts.group }}">
  <br>

  <label for="personalAddress"> Personal Address </label>
  <input type="text" name="personalAddress" id="personalAddress" value="{{ contacts.personalAddress }}">
  <br>

  <label for="workAddress"> Work Address </label>
  <input type="text" name="workAddress" id="workAddress" value="{{ contacts.workAddress }}">
  <br>

  <label for="socialProfile"> Social Media Profile </label>
  <input type="text" name="socialProfile" id="socialProfile" value="{{ contacts.socialProfile }}">
  <br>

  <label for="birthday"> Birthday </label>
  <input type="date" name="birthday" id="birthday" value="{{ contacts.birthday }}">
  <br>

  <label for="notes"> Contact Notes </label>
  <input type="text" name="notes" id="notes" value="{{ contacts.notes }}">
  <br>


  <label for="title-input"> Title </label>
  <input type="text" name="title" id="title-input" value="{{ foundBook.title }}">
  <br>

  <button type="submit"> Save the updates </button>
</form>